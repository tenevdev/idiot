{
    // Environment
    "browser": true,
    "node": true,
    "mocha": true,
    "predef": [
        "expect"
    ],
    "devel": false,

    // Enforcing
    "bitwise": true,
    "curly": false,
    "eqeqeq": true,
    "latedef": true,
    "maxparams": 4,
    "maxdepth": 4,
    "maxstatements": 15,
