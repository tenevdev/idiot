// Partial used in project-detail
// Should include data-visualization partial

.md-tile-left
	// Image icon
.md-tile-content.md-padding(ng-controller='HubDetailController as hubDetail')
	h2
		md-button.md-primary(ng-click='hubDetail.select(hub)' layout='row' layout-align='start center')
			.state-circle(ng-class='\'hub-\' + hub.state')
			| {{hub.name}}
		md-button.md-icon-button(ng-click='hubDetail.showId=!hubDetail.showId')
			md-icon(md-svg-src='assets/images/settings.svg')
	div(layout ng-show='hubDetail.showId')
		div(flex='20')
			span.md-body-1 ID : {{hub._id}}
				md-tooltip Copy for use in SDK
	div(flex ng-if='hub.dataStream.dataType == \'Number\'' ng-include="'/partials/project-detail/data-visualization/data-chart'")
	div(flex ng-if='hub.dataStream.dataType == \'Vector\'' ng-include="'/partials/project-detail/data-visualization/polar-chart'")
